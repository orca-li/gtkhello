<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <object class="GtkDialog" id="confirm_dialog">
    <property name="title">Exit dialog</property>
    <property name="default_width">230</property>
    <property name="default_height">135</property>
    <child>
      <object class="GtkBox" id="exit_box">
        <property name="orientation">GTK_ORIENTATION_VERTICAL</property>
        <child>
            <object class="GtkLabel" id="label">
                <property name="label">Are you sure exit?</property>
              </object>
        </child>
        <child>
          <object class="GtkBox" id="button_space">
            <property name="orientation">GTK_ORIENTATION_HORIZONTAL</property>
            <child>
              <object class="GtkButton" id="yes_button">
                <property name="label">Yes</property>
              </object>
            </child>
            <child>
              <object class="GtkButton" id="no_button">
                <property name="label">No</property>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </object>
</interface>
